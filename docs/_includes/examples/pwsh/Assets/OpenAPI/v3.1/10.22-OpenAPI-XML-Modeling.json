{
  "openapi": "3.1.2",
  "info": {
    "title": "Product API with XML Modeling",
    "description": "Demonstrates OpenAPI 3.2 XML modeling with attributes, namespaces, and wrapped arrays.",
    "version": "1.0.0"
  },
  "paths": {
    "/products": {
      "post": {
        "summary": "Create a new product.",
        "description": "Accepts a product payload and returns the created product.",
        "operationId": "createProduct",
        "requestBody": {
          "description": "Product data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            },
            "application/yaml": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Product created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              "application/yaml": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "summary": "Get product by ID.",
        "description": "Returns a product with XML-specific serialization.",
        "operationId": "getProduct",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Product identifier",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              "application/yaml": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "title": "Product",
        "required": [
          "Id",
          "Name",
          "Price"
        ],
        "type": "object",
        "properties": {
          "Id": {
            "type": "integer",
            "description": "Unique product identifier",
            "format": "int32",
            "xml": {
              "name": "id",
              "attribute": true
            },
            "example": 123
          },
          "Name": {
            "type": "string",
            "description": "Product name",
            "xml": {
              "name": "ProductName"
            },
            "example": "Widget"
          },
          "Price": {
            "type": "number",
            "description": "Product price in USD",
            "format": "decimal",
            "xml": {
              "name": "Price",
              "namespace": "http://example.com/pricing",
              "prefix": "price"
            },
            "example": 19.99
          },
          "Items": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of product items",
            "xml": {
              "name": "Item",
              "wrapped": true
            },
            "example": [
              "Item1",
              "Item2",
              "Item3"
            ]
          }
        },
        "description": "A product with XML-specific serialization"
      }
    }
  }
}
